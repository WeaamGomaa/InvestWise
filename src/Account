package zakat_bank.java;

public class Account {
    private String type;
    private String accountNum;
    private String bankName;

    // Constructor with all three fields
    public Account( String accountNum, String type,String bankName) {
        this.bankName = bankName;
        this.accountNum = accountNum;
        this.type = type;
    }

    // Constructor with only accountNum and type (bankName will be null)
    public Account(String accountNum, String type) {
        this.accountNum = accountNum;
        this.type = type;
        // bankName remains null unless set later
    }

    public void setAccountNum(String accountNum) {
        accountNum = accountNum;
    }

    public void setBankName(String bankName) {
        this.bankName = bankName;
    }

    public void setType(String type) {
        this.type = type;
    }

    public String getAccountNum() {
        return accountNum;
    }

    public String getBankName() {
        return bankName;
    }

    public String getType() {
        return type;
    }
}
